<bulkInfo
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://contab.cnr.it/schema/SIGLA" 
		xsi:schemaLocation="http://contab.cnr.it/schema/SIGLA http://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd" shortDescription="File Excel">
	<fieldProperty
		name="pg_estrazione"
		property="pg_estrazione"
		inputType="TEXT"
		inputSize="10"
		maxLength="10"
		label="pg_estrazione" />
	<fieldProperty
		name="sheet_name"
		property="sheet_name"
		maxLength="400"
		inputSize="40"
		inputType="TEXT"
		label="Nome del File"
		caseSensitiveSearch="false"
		enabledOnSearch="false"
		enabledOnEdit="false"		
		enabledOnInsert="false" />
	<fieldProperty
		name="stato"
		property="stato"
		inputType="RADIOGROUP"
		layout="HORIZONTAL"
		keysProperty="statoKeys"
		label="Stato"
		caseSensitiveSearch="false" />
	<fieldProperty
		name="ds_estrazione"
		property="ds_estrazione"
		maxLength="300"
		cols="50"
		rows="5"
		inputType="TEXTAREA"
		label="Descrizione"
		caseSensitiveSearch="false" />
	<fieldProperty
		name="server"
		property="server"
		inputType="TEXTAREA"
		cols="60"
		rows="5"
		maxLength="200"
		label="server" />
	<fieldProperty
		name="nome_file"
		property="nome_file"
		inputType="TEXTAREA"
		cols="60"
		rows="5"
		maxLength="300"
		label="nome_file" />
	<fieldProperty
		name="query"
		property="query"
		inputType="TEXTAREA"
		cols="60"
		rows="5"
		maxLength="4000"
		label="query" />
