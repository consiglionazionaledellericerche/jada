		name="email_subject"
		property="email_subject"
		inputType="TEXT"
        inputSize="63"
		maxLength="250"
		nullable="false"
		label="Oggetto:" />
	<fieldProperty
		name="email_body"
		property="email_body"
		inputType="TEXTAREA"
		cols="100"
		rows="7"
		maxLength="4000"
		label="Corpo del testo" />	
	<fieldProperty
		name="dt_partenza"
		property="dt_partenza"
		inputSize="20"
		inputType="TEXT"
		label="Data e ora"
		formatName="timestamp" />
	<fieldProperty
		name="intervallo"
		property="intervallo"
		inputSize="20"
		inputType="TEXT"
		label="Intervallo" />
